@model IEnumerable<CMS.Domain.ViewModels.PostViewModel>

@{
    ViewData["Title"] = "Index";
}
<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>

                    <div class="col-md-12">
                        <img src="@Url.Content(@item.FeaturedImageUrl)" id="img" class="img-thumbnail" style="width:20%"onerror="this.onerror=null;this.src='@Url.Content("~/Imagefiles/imgnotfound.png")';" />
                        <br/>
                        <a asp-action="Postview" asp-route-id="@item.PostID">
                            <font size="4">@Html.DisplayFor(modelItem => item.Title)</font>
                        </a>

                        <div class="txt_truncate">
                            <font size="3">@Html.Raw(item.Content)</font>
                        </div>
                        <br />
                        <p>post terms will be shown here.</p>
                        
                        <p align="right">created by @Html.DisplayFor(modelItem => item.Author)</p>
                        <p align="right">created at @Html.DisplayFor(modelItem => item.CreatedDate)</p>
                        <br />
                    </div>

                </td>
                @*<td>
                        <a asp-action="Edit" asp-route-id="@item.PostID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.PostID">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.PostID">Delete</a>
                        <a asp-action="Comment" asp-route-id="@item.PostID">Comment</a>
                    </td>*@
            </tr>
        }
    </tbody>
</table>
@section scripts {

<script type="text/javascript">
        $(document).ready(function () {
            $(".txt_truncate").each(function (i) {
                var len = $(this).text().trim().length;
                if (len > 200) {
                    $(this).text($(this).text().substr(0, 200) + '...');
                }
            });
        });
      $("#img").on("error", function () {
            $(this).attr('src', '@Url.Content("~/Imagefiles/imgnotfound.png")');
        });
</script>

}
